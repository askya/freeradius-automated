{% for sockets in site_def.client_sockets %}
{% for socket, clients in sockets.items() %}

clients {{ socket }} {
	{% for client in clients -%}
	client {{ client.client }} {
		ipaddr = {{ client.ip }}
		proto = *
		secret = {{ client.secret }}
		require_message_authenticator = yes
		shortname = {{ client.client }}
		nas_type	 = other
		limit {
			max_connections = 16
			lifetime = 0
			idle_timeout = 30
		}
	}
	{% endfor %}

}
{% endfor -%}
{% endfor %}
